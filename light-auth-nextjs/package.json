{
  "name": "@light-auth/nextjs",
  "version": "0.0.3",
  "description": "light auth framework for react, using arctic",
  "author": {
    "name": "SÃ©bastien Pertus",
    "email": "spertus@microsoft.com",
    "url": "https://github.com/Mimetis"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "nodejs",
    "oauth",
    "jwt",
    "oauth2",
    "authentication",
    "nextjs",
    "light-auth"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./client": {
      "types": "./src/index_client.tsx",
      "import": "./dist/index_client.mjs",
      "default": "./dist/index_client.mjs"
    }
  },
  "scripts": {
    "build": "npm run clean && rollup -c --bundleConfigAsCjs",
    "dev": "rollup -cw --bundleConfigAsCjs",
    "clean": "shx rm -rf dist lib",
    "start": "rollup -c -w"
  },
  "dependencies": {
    "arctic": "^3.6.0",
    "jose": "^6.0.10",
    "@light-auth/core": "0.0.3"
  },
  "peerDependencies": {
    "next": "^15.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "arctic": "^3.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "shx": "^0.4.0"
  },
  "workspaces": [
    "../light-auth-core"
  ]
}