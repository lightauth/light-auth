{
  "name": "@light-auth/core",
  "version": "0.0.8",
  "description": "light auth core framework agnostic, using arctic",
  "author": {
    "name": "SÃ©bastien Pertus",
    "email": "spertus@microsoft.com",
    "url": "https://github.com/Mimetis"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "nodejs",
    "oauth",
    "jwt",
    "oauth2",
    "authentication",
    "light-auth"
  ],
  "type": "module",
  "exports": {
    "./client": {
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.cjs",
      "types": [
        "./src/client/index.ts",
        "./dist/client/index.d.ts"
      ]
    },
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": [
        "./src/index.ts",
        "./dist/index.d.ts"
      ]
    },
    "./adapters": {
      "import": "./dist/adapters/index.mjs",
      "require": "./dist/adapters/index.cjs",
      "types": [
        "./src/adapters/index.ts",
        "./dist/adapters/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && rollup -c --bundleConfigAsCjs",
    "dev": "rollup -cw --bundleConfigAsCjs",
    "clean": "shx rm -rf dist lib",
    "start": "rollup -c -w"
  },
  "peerDependencies": {
    "cookie": "^1.0.2",
    "jose": "^6.0.10",
    "arctic": "^3.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "rollup": "^4.40.1",
    "shx": "^0.4.0",
    "tslib": "^2.8.1"
  }
}