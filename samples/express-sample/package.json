{
    "name": "express-auth-app",
    "version": "1.0.0",
    "description": "Simple Express web application with authentication",
    "main": "app.js",
    "type": "module",
    "scripts": {
        "build": "npm run clean && rollup -c --bundleConfigAsCjs",
        "dev": "npx tsx watch --env-file=.env src/app.ts & rollup -cw --bundleConfigAsCjs & npm run build:css -w",
        "build:css": "npx @tailwindcss/cli -i ./public/css/style.css -o ./public/css/output.css --watch"
    },
    "dependencies": {
        "arctic": "^3.6.0",
        "autoprefixer": "^10.4.21",
        "body-parser": "^2.2.0",
        "cookie": "^1.0.2",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "morgan": "^1.10.0",
        "postcss": "^8.5.3",
        "postcss-cli": "^11.0.1",
        "pug": "^3.0.2",
        "tailwindcss": "^4.1.5",
        "typescript": "^5.8.3"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.3",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.2",
        "@tailwindcss/cli": "^4.1.5",
        "@types/express": "^5.0.1",
        "@types/node": "^22.15.21",
        "@types/pug": "^2.0.10",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-preset-es2015": "^6.24.1",
        "nodemon": "^3.0.1",
        "rollup": "^2.79.2",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^7.0.2",
        "tslib": "^2.8.1"
    },
    "workspaces": [
        "../../light-auth-express",
        "../../light-auth-core"
    ]
}
