---
import { Button, buttonVariants } from "./ui/button";
import { Github } from "lucide-react";
---

<div>
  <div class="mt-4 flex flex-col space-y-2">
    <input type="hidden" name="provider" value="github" />
    <a href={"/api/auth/login/github"} class={buttonVariants({ variant: "outline" })}>
      <Github className="mr-2 h-4 w-4" />
      GitHub
    </a>

    <a href={"/api/auth/login/google"} class={buttonVariants({ variant: "outline" })}>
      <svg class="mr-2 h-4 w-4" viewBox="0 0 24 24">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"></path>
        <path
          d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
          fill="#34A853"></path>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"
        ></path>
        <path
          d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
          fill="#EA4335"></path>
        <path d="M1 1h22v22H1z" fill="none"></path>
      </svg>
      Google
    </a>

    <form>
      <Button type="submit" id="btnLoginMicrosoft" variant="outline" className="w-full">
        <svg class="mr-2 h-4 w-4" viewBox="0 0 23 23">
          <path fill="#f3f3f3" d="M0 0h23v23H0z"></path>
          <path fill="#f35325" d="M1 1h10v10H1z"></path>
          <path fill="#81bc06" d="M12 1h10v10H12z"></path>
          <path fill="#05a6f0" d="M1 12h10v10H1z"></path>
          <path fill="#ffba08" d="M12 12h10v10H12z"></path>
        </svg>
        Microsoft
      </Button>
    </form>
  </div>
</div>

<script>
  import { actions } from "astro:actions";

  const btn = document.getElementById("btnLoginMicrosoft");
  btn?.addEventListener("click", async (event) => {
    event.preventDefault();
    const { data, error } = await actions.signIn("microsoft");
    if (error) {
      console.error(error);
    } else {
      console.log(data);
    }
  });

  // const form = document.querySelector("form");
  // form?.addEventListener("submit", async (event) => {
  //   event.preventDefault();
  //   const { error } = await actions.signIn("google");
  // });
</script>
